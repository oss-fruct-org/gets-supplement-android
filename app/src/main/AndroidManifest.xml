<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.fruct.oss.getssupplement" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.GetsTheme" >

        <activity
            android:name="org.fruct.oss.getssupplement.MapActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.fruct.oss.getssupplement.AddNewPointActivity"
            android:label="@string/title_activity_add_new_point"
            android:parentActivityName="org.fruct.oss.getssupplement.MapActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="org.fruct.oss.getssupplement.CategoryActivity"
            android:label="@string/title_activity_category"
            android:parentActivityName="org.fruct.oss.getssupplement.MapActivity">
        </activity>

        <activity
            android:name="org.fruct.oss.getssupplement.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="org.fruct.oss.getssupplement.MapActivity" >
        </activity>

    </application>

</manifest>
